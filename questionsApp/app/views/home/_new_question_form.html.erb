<!-- Início modal Botão -->
<div class="modal fade" id="new-question-modal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">Criar Nova Pergunta</h4>
			</div>

			<!-- Início form: Modal Pergunta -->
			<%= form_for :question, url: '/questions', html: { class: 'form-horizontal' } do %>
			<div class="modal-body">
				<div class="form-group">
					<label for="inputEmail" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-10">
						<input type="email" name="email" class="form-control" id="inputEmail" placeholder="Email" required>
					</div>
				</div>
				<div class="form-group">
					<label for="inputQuestion" class="col-sm-2 control-label">Pergunta</label>
					<div class="col-sm-10">
						<textarea class="form-control" name="question_body" id="inputQuestion" placeholder="Escreva o que você gostaria de saber" required></textarea>
					</div>
				</div>
			</div>
			<!-- Fim form: Modal Pergunta -->
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
				<button type="submit" class="btn btn-primary">Enviar</button>
			</div>
			<% end %>
		</div>
	</div>
</div>

<!-- Fim modal Botão -->	